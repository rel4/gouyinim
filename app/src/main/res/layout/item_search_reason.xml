<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gouyin.im.widget.RoundedImageView
        android:id="@+id/riv_user_image"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x120"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/x30"
        android:src="@mipmap/load_small" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/riv_user_image"
        android:layout_toRightOf="@+id/riv_user_image"
        android:text="@string/loading" />

    <TextView

        android:id="@+id/tv_user_fen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginTop="@dimen/x10"
        android:layout_toRightOf="@+id/riv_user_image"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_fen"
        android:layout_marginTop="@dimen/x10"
        android:layout_toRightOf="@+id/riv_user_image"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/shape_background_text_white_color"
        android:paddingBottom="@dimen/x20"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x40"
        android:paddingTop="@dimen/x20"
        android:text="@string/cancel"
        android:textColor="@color/text_black_color" />
</RelativeLayout>