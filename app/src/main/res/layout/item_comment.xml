<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.gouyin.im.widget.RoundedImageView
        android:id="@+id/riv_item_user_image"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y80" />
    <TextView
        android:text="mingzi"
        android:layout_toRightOf="@+id/riv_item_user_image"
        android:layout_alignTop="@+id/riv_item_user_image"
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="00:00"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/riv_item_user_image"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignBottom="@+id/riv_item_user_image"
        android:layout_alignLeft="@+id/tv_user_name"
        android:text="shajhdahdajs"
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
