<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color"
    android:orientation="vertical">

    <include layout="@layout/comman_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/x30">

        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"

            android:padding="@dimen/x25"
            android:text="原密码    "
            android:textSize="@dimen/order_text_small2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_pwd"
            android:orientation="vertical">

            <EditText

                android:layout_width="@dimen/x400"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/et_shaper"
                android:padding="@dimen/x7"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/x10"

                android:text="8-12位字母、数字组成"
                android:textSize="@dimen/order_text_small2" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/x10">

        <TextView
            android:id="@+id/tv_newpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"

            android:padding="@dimen/x25"
            android:text="新密码    "
            android:textSize="@dimen/order_text_small2" />

        <EditText

            android:layout_width="@dimen/x400"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_toRightOf="@+id/tv_newpwd"
            android:background="@drawable/et_shaper"
            android:padding="@dimen/x7"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/x10">

        <TextView
            android:id="@+id/tv_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"

            android:padding="@dimen/x23"
            android:text="再次输入"
            android:textSize="@dimen/order_text_small2" />

        <EditText

            android:layout_width="@dimen/x400"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_toRightOf="@+id/tv_again"
            android:background="@drawable/et_shaper"
            android:padding="@dimen/x7"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/x20"
        android:paddingBottom="@dimen/x20">


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"

            android:layout_marginLeft="@dimen/x100"
            android:background="@color/text_select_color"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:textColor="@color/white"
            android:text="提交"
            android:textSize="@dimen/order_text_small2" />


        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"

            android:background="@color/line_color"
            android:layout_toRightOf="@+id/tv_submit"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x30"
            android:text="重置"
            android:textSize="@dimen/order_text_small2" />

    </RelativeLayout>

</LinearLayout>
