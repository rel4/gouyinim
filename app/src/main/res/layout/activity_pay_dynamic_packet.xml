<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y600"
        android:layout_alignParentBottom="true"
        android:background="@color/background_white_color">

        <ImageView
            android:id="@+id/action_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:padding="@dimen/x30"
            android:src="@mipmap/dynamic_logout" />

        <TextView
            android:id="@+id/center_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/send_dynamic_wacth_pic"
            android:textColor="@color/background_red_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/center_line"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x30"
            android:textColor="@color/background_red_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center_line"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x60"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_weixin_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:background="@drawable/shape_background_text_white_color"
                android:paddingBottom="@dimen/x30"
                android:paddingEnd="@dimen/x50"
                android:paddingStart="@dimen/x50"

                android:paddingTop="@dimen/x30"
                android:text="@string/weixin_play"
                android:textColor="@color/background_red_color" />

            <TextView
                android:id="@+id/tv_aliplay_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x50"
                android:background="@drawable/shape_background_text_white_color"
                android:paddingBottom="@dimen/x30"
                android:paddingEnd="@dimen/x50"
                android:paddingStart="@dimen/x50"
                android:paddingTop="@dimen/x30"
                android:text="@string/aliplay_play"
                android:textColor="@color/background_red_color" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>