<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:background="@color/app_gred_background">

        <View
            android:id="@+id/center_line"
            android:layout_width="@dimen/x2"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/app_line" />

        <TextView
            android:id="@+id/tv_wacth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/center_line"
            android:gravity="center"
            android:text="@string/wacth"
            android:textColor="@drawable/selector_home_text_color" />

        <TextView
            android:id="@+id/tv_fen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/center_line"
            android:gravity="center"
            android:text="@string/str_fen"
            android:textColor="@drawable/selector_home_text_color" />

        <View
            style="@style/app_line_horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_frient_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>