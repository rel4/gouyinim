<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/layout_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300">


        <com.gouyin.im.widget.RoundedImageView
            android:id="@+id/rv_user_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_wacth_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/x30"
            android:layout_marginBottom="@dimen/y10"
            android:drawableLeft="@mipmap/home_watch"
            android:drawablePadding="@dimen/x10"
            android:text="@string/loading"
            android:textColor="@color/background_white_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_fen_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/x30"
            android:layout_marginBottom="@dimen/y10"
            android:text="@string/loading"
            android:textColor="@color/background_white_color"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pic"
        android:layout_margin="@dimen/x15"
        android:ellipsize="end"
        android:ems="8"
        android:maxEms="8"
        android:singleLine="true"
        android:text="@string/loading"
        android:textColor="@color/text_black_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_user_name"
        android:layout_margin="@dimen/x15"
        android:text="@string/loading"
        android:textColor="@color/gray_color"
        android:textSize="12sp" />
</RelativeLayout>